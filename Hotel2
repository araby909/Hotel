 <script>
var gn1 = 0
var gn2 = 0
var gn3 = 0
var gn4 = 0


 function addRoom1() {
gn1++;
if(gn1 <= 3 ){
// if else statement works to make room stop at 3. Tried return didn't work, also tried display
document.getElementById("addRoom1").style.visibility ="visible";
//makes box appear
var newListItem = document.createElement('h1');
//creates new list
var ar1 = document.getElementById('guest').value;
//creates guest to add into room
var newText = document.createTextNode(ar1);
newListItem.appendChild(newText);
//adds text of persons name and adds it to list
var position = document.getElementsByTagName('ul')[0];
position.appendChild(newListItem);
//positions it on list.
}

else {
  document.getElementById("addRoom1").style.visibility ="hidden";
//makes button disappear after 3 guests are added to room.
}
window.alert(gn1)
 //show how much in room.
 }

function removeRoom1() {
// can't make remove start at 3. goes down to 0 and starts subtracting. making adding go over 3.
// tried to do if else. confused on what to put in the if and in else.
if(removeGuest.value ==3){
  //confused tried parseint tried clearinterval broke my code. also tried while loop broke code aswell.
gn1--;
//subtracts guest.
document.getElementById("addRoom1").style.visibility ="visible";
//makes button visibile again.
var checkOut = document.getElementById('room1');
//creates variable to show where to delete guests/
var removeGuest = document.getElementById('h1').value;
checkOut.removeChild(checkOut.childNodes[removeGuest-1]);
//removes guests.
}
window.alert(gn1)
//show much people deleted.
}

